<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.DatesCalculator.MainActivity"
    tools:context=".MainActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="32dp"
        android:textSize="20sp"
        android:lineSpacingExtra="5dp"
        android:gravity="center_vertical"
        android:text="@string/pls_select_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_pickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_date"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/default_margin_padding"
        app:backgroundTint="@color/lightGreen_500"
        app:icon="@drawable/ic_calendar"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_pickDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_dates"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/default_margin_padding"
        app:backgroundTint="@color/lightPurple_400"
        app:icon="@drawable/ic_calendar"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>